<h1>New Task</h1>

<%= form_for @task, url: tasks_create_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<%= link_to 'Create Task', tasks_create_path %>
