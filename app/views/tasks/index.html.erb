<h1>My tasks</h1>

<ul>
  <!-- loop over all tasks -->
  <% @tasks.each do |task| %>
    <li><%= link_to task[:title], "/tasks/#{task[:id]}" %>
        <%= link_to 'DELETE',
            destroy_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', tasks_new_path %>
